---
const { variant = "primary", size = "small" } = Astro.props;

const buttonStyling = "text-white rounded";

const variantClasses = {
  primary: "bg-orange-500/100 hover:bg-orange-700",
  secondary: "bg-slate-500/100 hover:bg-slate-700",
};

const sizeClasses = {
  small: "px-2 py-2",
  medium: "px-6 py-3 text-xl",
  large: "px-10 py-5 text-2xl",
};
---

<!-- <div>
    <button class="border-2 border-black"><slot /></button>
</div> -->
<div>
  <button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>
</div>
